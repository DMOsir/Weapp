@import "../../template/sku/sku.wxss";
.pre-load {
    position: absolute;
    width: 750rpx;
    height: 750rpx;
    background: url('data:image/png;base64,') center center no-repeat;
}

.contact {
    padding: 0;
    line-height: 0;
    margin-top: 30rpx;
}

.contact-image {
    width: 100rpx;
    height: 100rpx;
}

.user-action {
    bottom: 200rpx;
    right: 40rpx;
    width: 100rpx;
    position: fixed;
    z-index: 10;
    display: flex;
    flex-flow: column wrap;
    justify-content: flex-start;
    align-content: center;
}

.user-action-image {
    margin-top: 30rpx;
    width: 100rpx;
    height: 100rpx;
}

.owner-action {
    top: 40rpx;
    right: 40rpx;
    width: 100rpx;
    position: fixed;
    z-index: 10;
    display: flex;
    flex-flow: column wrap;
    justify-content: flex-start;
    align-content: center;
}

.owner-action-image {
    margin-bottom: 30rpx;
    width: 100rpx;
    height: 100rpx;
}

.item-img-box {
    width: 750rpx;
    height: 750rpx;
    margin: 0 auto;
}

.item-img {
    width: 750rpx;
    height: 750rpx;
    opacity: 0;
}

.desc-img {
    opacity: 0;
    width: 750rpx;
    margin-top: -12rpx;
}

.desc-box {
    width: 750rpx;
    margin: 12rpx auto 0;
}

.loaded {
    opacity: 1;
    transition: opacity .3s ease-in-out;
}
