
.cover-base{
	position:fixed;
	width:0;
	height:0;
	left:0;
	top:-100%;
}
.cover{
	width:100%;
	height:100%;
	top:0;
	left:0;	
	background-color:#000;
	z-index:9;
	opacity:0.7;	
}
.sku{
	position:fixed;
	left:0;
	bottom:-100%;
	width:750rpx;
	background:#fff;
	display: flex;
	flex-flow: column nowrap ;
	justify-content: flex-start;
	align-items: center;
	box-sizing: border-box;
}
.sku_show{
	bottom:0;
	z-index:10;
}
.basic{
	width:750rpx;
	height:220rpx;
	border-bottom:1rpx solid #e9e9e9;
	display: flex;
	flex-flow: row nowrap ;
	justify-content: flex-start;
	align-items: center;
	box-sizing: border-box;
}
.img-box{
	width:190rpx;
	height:160rpx;
	padding-left:30rpx;
	box-sizing: border-box;
}
.basic-img{
	width:160rpx;
	height:160rpx;
	border-radius:10rpx;
	border:5rpx solid #fff;
	box-shadow: 0 0 0 2rpx #ececec;
}
.basic-text{
	width:450rpx;
	height:220rpx;
	padding-left:30rpx;
	padding-top:30rpx;
	box-sizing: border-box;
	display: flex;
	flex-flow: column nowrap ;
	justify-content: flex-start;
	align-items: flex-start;
}
.title{
	color:#333;
	font-size:10pt;
	line-height:40rpx;
}
.price{
	color:#e40046;
	font-size:12pt;
	font-weight:500;
	line-height:50rpx;
}
.sku-selected{
	color:#999;
	font-size:9pt;
	line-height:40rpx;
}
.close-box{
	width:110rpx;
	height:220rpx;
	padding-right:30rpx;
	padding-top:30rpx;
	box-sizing: border-box;
	display: flex;
	flex-flow: column nowrap ;
	justify-content: flex-start;
	align-items: flex-end;
}
.close{
	width:32rpx;
	height:32rpx;	
}
.prop{
	width:690rpx;
	margin:0 auto;
	border-bottom:1rpx solid #e9e9e9;
	display: flex;
	flex-flow: column nowrap ;
	justify-content: flex-start;
	align-items: center;
	box-sizing: border-box;	
}
.prop-name{
	width:690rpx;
	height:88rpx;	

	font-size:10pt;
	color:#333;
	line-height:88rpx;
	box-sizing: border-box;	
}
.prop-choose{
	width:690rpx;
	display: flex;
	flex-flow: row wrap ;
	justify-content: flex-start;
	align-items: flex-start;
	box-sizing: border-box;	
}
.prop-value{
	font-size:10pt;
	color:#333;
	margin:0 20rpx 20rpx 0;
	line-height:64rpx;
	box-sizing: border-box;
}
.prop-value::after {
	border:none;
}
.prop_active{
	background-color:#e40046;
	color:#fff;
}
.num{
	
	border:none;
}
.rect{
	height:60rpx;
	width:60rpx;
	background:#f8f8f8;
	margin:0 4rpx 20rpx 0;
	box-sizing: border-box;	
}
.move{
border-top-left-radius:6rpx;
border-bottom-left-radius:6rpx;	
	
}
.num-value{
	text-align:center;
	font-size:10pt;
	color:#333;
	line-height:60rpx;

	box-sizing: border-box;		
}
.add{
border-bottom-right-radius:6rpx;
border-top-right-radius:6rpx;
	
}
.quantity{
	color:#999;
	font-size:9pt;
	margin-left:6rpx;
	line-height:60rpx;
}
.gutter{
	width:750rpx;
	height:20rpx;
	background-color:#f8f8f8;
}
.buy{
	width:750rpx;
	height:160rpx;

	background-color:#fff;

	display: flex;
	flex-flow: column nowrap;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
	border-top:1rpx solid #e9e9e9;
}
.to-buy{
	width:690rpx;
	height:100rpx;
	line-height:100rpx;
	font-size:12pt;
	color:#fff;
	background-color:#e40046;
}
button[disabled][type="default"], wx-button[disabled]:not([type]){
	background-color:#f499ac;
	color:#fff;
}
.front-buy{
	position:fixed;
	bottom:0;
	left:0;
}